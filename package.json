{
  "name": "@duiggi/mimawa",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "greet"
  ],
  "author": "Duiggi",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.2",
    "axios-mock-adapter": "^1.21.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  }
}
